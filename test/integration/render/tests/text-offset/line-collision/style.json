{
  "version": 8,
  "metadata": {
    "test": {
      "description": "'Carribean Sea' crosses a tile boundary, but we don't draw the tile boundary in the test because JS and Native render tile boundaries differently. Also we wait after idle because collision box are drawn afterwards",
      "height": 256,
      "width": 1024,
      "collisionDebug": true,
    "operations": [["idle"], ["wait", 500]]
    }
  },
  "center": [-73, 15],
  "zoom": 4,
  "sources": {
    "mapbox": {
      "type": "vector",
      "maxzoom": 14,
      "tiles": ["local://tiles/mapbox.mapbox-streets-v7/{z}-{x}-{y}.mvt"]
    }
  },
  "glyphs": "local://glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "white"
      }
    },
    {
      "id": "line-concave",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "marine_label",
      "layout": {
        "text-field": "This used to be the Carribean",
        "symbol-placement": "line-center",
        "text-allow-overlap": true,
        "text-size": 20,
        "text-offset": [0, -2],
        "text-font": ["Open Sans Semibold", "Arial Unicode MS Bold"],
        "text-max-width": 0
      }
    },
    {
      "id": "line-convex",
      "type": "symbol",
      "source": "mapbox",
      "source-layer": "marine_label",
      "layout": {
        "text-field": "This used to be the Carribean",
        "symbol-placement": "line-center",
        "text-allow-overlap": true,
        "text-size": 20,
        "text-offset": [0, 2],
        "text-font": ["Open Sans Semibold", "Arial Unicode MS Bold"],
        "text-max-width": 0
      }
    },
    {
      "id": "line",
      "type": "line",
      "source": "mapbox",
      "source-layer": "marine_label",
      "paint": {
        "line-width": 1
      }
    }
  ]
}
