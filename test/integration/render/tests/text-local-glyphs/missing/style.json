            "source": "sample",
            "layout": {
                "text-anchor": "top",
                "text-field": "{name_en} ({name_ka})",
                "text-font": ["Open Sans Semibold", "Arial Unicode MS Bold"],
                "text-size": 30,
                "text-offset": [0, 0]
            }
