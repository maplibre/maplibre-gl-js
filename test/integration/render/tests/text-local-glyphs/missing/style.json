            "localIdeographFontFamily": "sans-serif",
            "width": 800,
            "height": 600
        }
    },
    "zoom": 8,
    "sources": {
        "sample": {
            "type": "geojson",
            "data": {
                "type": "Feature",
                "geometry": {
