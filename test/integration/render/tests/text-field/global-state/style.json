{
  "version": 8,
  "metadata": {
    "test": {
      "height": 256,
      "width": 256
    }
  },
  "center": [ 0, 0 ],
  "zoom": 0,
  "state": {
    "prefix": { "default": "pre_"},
    "suffix": { "default": "_suf" }
  },
  "sources": {
    "point": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": [
          {
            "type": "Feature",
            "properties": {
              "name": "Napoli"
            },
            "geometry": {
              "type": "Point",
              "coordinates": [ 0, 0 ]
            }
          }
        ]
      }
    }
  },
  "glyphs": "local://glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "text",
      "type": "symbol",
      "source": "point",
      "layout": {
        "text-field": [
          "concat",
          ["global-state", "prefix"],
          ["get", "name"],
          ["global-state", "suffix"]
        ],
        "text-font": [
          "Open Sans Semibold",
          "Arial Unicode MS Bold"
        ],
        "text-size": 32
      }
    }
  ]
}
